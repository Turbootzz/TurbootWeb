// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Projects for portfolio
model Project {
  id               String   @id @default(cuid())
  title            String
  slug             String   @unique
  category         Category
  description      String
  longDescription  String?
  image            String?
  techStack        String[]
  liveUrl          String?
  githubUrl        String?
  featured         Boolean  @default(false)
  order            Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum Category {
  WEB
  SOFTWARE
  PC_BUILD
}

// Services offered
model Service {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  features    String[]
  icon        String?
  active      Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact form submissions
model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String
  message   String
  status    Status   @default(NEW)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  NEW
  READ
  REPLIED
  ARCHIVED
}

// Homelab services (future implementation)
model HomelabService {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String
  url          String?
  icon         String?
  category     String?
  status       String   @default("online")
  requiresAuth Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}